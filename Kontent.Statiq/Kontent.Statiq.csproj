<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Authors>Kristian Bortnik, Marnix van Valen</Authors>
    <Company>Kontent.Statiq</Company>
    <Description>Kentico Kontent module for Statiq. Fetch content and assets from Kontent headless CMS.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Kristian Bortnik, Marnix van Valen 2018-2020</Copyright>
    <PackageProjectUrl>https://github.com/alanta/Kontent.Statiq</PackageProjectUrl>
    <RepositoryUrl>https://github.com/alanta/Kontent.Statiq</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>kontent statiq</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Kentico.Kontent.Delivery" Version="13.0.1" />
    <PackageReference Include="Statiq.Common" Version="1.0.0-beta.13" />
    <PackageReference Include="Statiq.Core" Version="1.0.0-beta.13" />
    <PackageReference Include="Statiq.Html" Version="1.0.0-beta.13" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
